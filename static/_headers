## Security Headers for ZipList PWA
## These headers enhance security while maintaining functionality
## Deployed on Netlify

/*
  # Content Security Policy (CSP)
  # Allows necessary resources while blocking unauthorized content
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://unpkg.com; connect-src 'self' https://generativelanguage.googleapis.com https://*.googleapis.com https://app.posthog.com https://*.posthog.com blob: data:; img-src 'self' data: blob: https:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; media-src 'self' blob: data: mediastream:; worker-src 'self' blob:; manifest-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';

  # Prevent clickjacking attacks
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Control referrer information sent with requests
  Referrer-Policy: strict-origin-when-cross-origin

  # Feature Policy / Permissions Policy
  # Grant only necessary permissions for PWA functionality
  Permissions-Policy: geolocation=(), camera=(), payment=(), usb=(), interest-cohort=(), microphone=(self), clipboard-read=(self), clipboard-write=(self), web-share=(self)

  # Enforce HTTPS (only in production)
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

  # XSS Protection (legacy browsers)
  X-XSS-Protection: 1; mode=block

  # Cache control for main app (allow caching with revalidation)
  Cache-Control: public, max-age=0, must-revalidate

# Static assets - cache aggressively
/icons/*
  Cache-Control: public, max-age=31536000, immutable

/splash/*
  Cache-Control: public, max-age=31536000, immutable

/assets/*
  Cache-Control: public, max-age=31536000, immutable

*.png
  Cache-Control: public, max-age=31536000, immutable

*.jpg
  Cache-Control: public, max-age=31536000, immutable

*.svg
  Cache-Control: public, max-age=31536000, immutable

*.webp
  Cache-Control: public, max-age=31536000, immutable

# Fonts
*.woff
  Cache-Control: public, max-age=31536000, immutable

*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Manifest and service worker - short cache with revalidation
/manifest.json
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: application/manifest+json

# Offline page
/offline.html
  Cache-Control: public, max-age=86400, must-revalidate
